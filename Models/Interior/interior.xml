<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>intporte</object-name>
    <object-name>intporte2</object-name>
    <object-name>intcargo</object-name>
    <object-name>portebagage</object-name>
    <object-name>cloisons</object-name>
    <object-name>intcontourvitres</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Embraer-ERJ-145/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -11.29643 </x-m>
      <y-m>  -0.47000 </y-m>
      <z-m>  -0.56928 </z-m>
    </offsets>
	        <condition>
                <not>
                    <property>sim/current-view/internal</property>
                </not>        
        </condition>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -11.87898 </x-m>
      <y-m>   0.00000 </y-m>
      <z-m>  -0.44630 </z-m>
    </offsets>
  </model>

  <!-- Les sièges -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Interior/Seats/all-seats.xml</path>
  </model>
    <animation>
    <type>material</type>
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>intporte</object-name>
    <object-name>intporte2</object-name>
    <object-name>intcargo</object-name>
    <object-name>portebagage</object-name>
    <object-name>cloisons</object-name>
    <object-name>intcontourvitres</object-name>
	<object-name>pedestal</object-name>
	<object-name>panel</object-name>
	    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.4 </red>
      <green> 0.4 </green>
      <blue>  0.4 </blue>
    </emission>
  </animation>
  <!-- Seat pilote -->
