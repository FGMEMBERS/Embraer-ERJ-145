<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>intporte</object-name>
    <object-name>intporte2</object-name>
    <object-name>portebagage</object-name>
    <object-name>cloisons</object-name>
    <object-name>intcontourvitres</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Embraer-ERJ-145/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -11.29643 </x-m>
      <y-m>  -0.47000 </y-m>
      <z-m>  -0.56928 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -11.87898 </x-m>
      <y-m>   0.00000 </y-m>
      <z-m>  -0.44630 </z-m>
    </offsets>
  </model>

  <!-- Les sièges -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Interior/Seats/all-seats.xml</path>
  </model>

  <!-- Seat pilote -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Interior/PilotSeat/seat.xml</path>
    <offsets>
      <x-m> -11.14 </x-m>
      <y-m>  -0.47 </y-m>
      <z-m>  -0.53 </z-m>
    </offsets>
  </model>
  
  <!-- Seat copilote -->
  <model>
    <path>Aircraft/Embraer-ERJ-145/Models/Interior/PilotSeat/seat.xml</path>
    <offsets>
      <x-m> -11.14 </x-m>
      <y-m>   0.47 </y-m>
      <z-m>  -0.53 </z-m>
    </offsets>
  </model>
  
  <!-- Passenger door -->
  <animation>
    <type>pick</type>
    <object-name>intporte</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intporte</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> 140 </dep></entry>
    </interpolation>
    <center>
      <x-m> -9.96635 </x-m>
      <y-m> -0.90893 </y-m>
      <z-m> -1.45361 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Emergency door -->
  <animation>
    <type>pick</type>
    <object-name>intporte2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intporte2</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>    0 </dep></entry>
      <entry><ind> 1 </ind><dep> -140 </dep></entry>
    </interpolation>
    <center>
      <x-m> -8.70575 </x-m>
      <y-m>  1.04650 </y-m>
      <z-m> -1.24567 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
