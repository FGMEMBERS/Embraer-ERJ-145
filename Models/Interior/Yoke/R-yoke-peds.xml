   <!-- cockpit controls -->

 	<!-- Joystick -->
	<animation>
		<object-name>yokehandles</object-name>
        <object-name>lid</object-name>
		<property>controls/flight/aileron</property>
		<type>rotate</type>
		<factor>29</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.14409</x-m>
			<y-m>0</y-m>
			<z-m> 0.3887</z-m>
		</center>
	</animation>
	<animation>
		<object-name>yokemast</object-name>
        <object-name>yokehandles</object-name>
        <object-name>lid</object-name>
		<property>controls/flight/elevator</property>
		<type>rotate</type>
		<factor>18</factor>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.1244</x-m>
			<y-m>0</y-m>
			<z-m>-0.00405</z-m>
		</center>
	</animation>

 <!-- rudder-pedals -->

 <animation>
  <type>rotate</type>
  <object-name>L-ruddpedal</object-name>
  <object-name>L-pedbase</object-name>
  <property>controls/flight/rudder</property>
  <factor>10</factor>
  <center>
   <x-m>-0.324</x-m>
   <y-m>-0.23</y-m>
   <z-m>-0.376</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>R-ruddpedal</object-name>
  <object-name>R-pedbase</object-name>
  <property>controls/flight/rudder</property>
  <factor>10</factor>
  <center>
   <x-m>-0.324</x-m>
   <y-m> 0.23</y-m>
   <z-m>-0.376</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>-1</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>

